{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "build",
            "args": [
                "run",
                "build"
            ]
        },
        {
            "taskName": "build:test",
            "args": [
                "run",
                "build:test"
            ]
        },
        {
            "taskName": "test",
            "args": [
                "run",
                "test"
            ],
            "isTestCommand": true
        }
    ]
}
